<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import java.net.*?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.bmazurkiewicz01.client.controller.RegisterController"
      alignment="CENTER">
    <TextField promptText="Name" focusTraversable="false" id="loginField" fx:id="loginField" alignment="CENTER"
               maxWidth="200">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </TextField>
    <PasswordField promptText="Password" focusTraversable="false" id="passwordField" fx:id="passwordField"
               alignment="CENTER" maxWidth="200">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </PasswordField>
    <Label fx:id="errorLabel" text="Label" visible="false" managed="false" textFill="red"/>
    <HBox alignment="CENTER">
        <Button id="loginButton" defaultButton="true" fx:id="registerButton" alignment="CENTER"
                onAction="#handleRegisterButton" prefWidth="125.0" text="Register">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </Button>
        <Button id="cancelButton" fx:id="cancelButton" alignment="CENTER"
                onAction="#handleCancelButton" prefWidth="90.0" text="Cancel">
            <HBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
        </Button>
    </HBox>


    <stylesheets>
        <URL value="@css/loginStyle.css"/>
    </stylesheets>
</VBox>


