<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<VBox fx:controller="com.bmazurkiewicz01.client.controller.LoginController"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextField fx:id="loginField" maxWidth="200" alignment="CENTER">
        <VBox.margin>
            <Insets top="10" bottom="10" right="10" left="10"/>
        </VBox.margin>
    </TextField>
    <Label fx:id="errorLabel" alignment="CENTER">
        <VBox.margin>
            <Insets top="10" bottom="10" right="10" left="10"/>
        </VBox.margin>
    </Label>
    <Button fx:id="loginButton" minWidth="150" alignment="CENTER" onAction="#handleLoginButton" text="Login">
        <VBox.margin>
            <Insets top="10" bottom="10" right="10" left="10"/>
        </VBox.margin>
    </Button>
</VBox>