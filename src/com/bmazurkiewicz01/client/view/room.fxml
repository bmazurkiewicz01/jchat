<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="600.0" prefWidth="800.0" styleClass="root" xmlns="http://javafx.com/javafx/11"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bmazurkiewicz01.client.controller.RoomController">
    <Pane layoutX="25.0" layoutY="75.0" prefHeight="506.0" prefWidth="751.0" styleClass="mainPane">
        <children>
            <HBox layoutX="210.0" prefHeight="27.0" prefWidth="474.0" style="-fx-background-radius: 0 25 0 0;">
                <children>
                    <Label fx:id="roomLabel" text="Room">
                        <font>
                            <Font size="18.0"/>
                        </font>
                        <padding>
                            <Insets left="2.0" right="10.0"/>
                        </padding>
                    </Label>
                    <Label fx:id="ownerLabel" text="Owner">
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Label>
                </children>
            </HBox>

            <Label layoutX="25.0" styleClass="connectedUsersLabel" text="Connected users:" textFill="#010000">
                <font>
                    <Font size="19.0"/>
                </font>
            </Label>
            <Pane prefHeight="506.0" prefWidth="203.0" styleClass="usersPane"/>

            <TextArea fx:id="chatTextArea" editable="false" layoutX="212.0" layoutY="28.0" prefHeight="406.0"
                      prefWidth="529.0" styleClass="chatTextArea"/>
            <Pane layoutX="213.0" layoutY="444.0" prefHeight="39.0" prefWidth="529.0" styleClass="messagePane">
                <children>
                    <TextField fx:id="messageField" prefHeight="0.0" prefWidth="403.0" styleClass="messageField"/>
                    <Button fx:id="sendMessageButton" defaultButton="true" layoutX="475.0" layoutY="1.0"
                            mnemonicParsing="false" onAction="#handleSendMessageButton" prefHeight="40.0"
                            prefWidth="40.0" styleClass="sendMessageButton"/>
                </children>
            </Pane>
            <Label fx:id="errorLabel" layoutX="213.0" layoutY="487.0" prefHeight="17.0" prefWidth="463.0"
                   style="-fx-alignment: center; -fx-text-alignment: center;" text="Error Label" textAlignment="CENTER"
                   textFill="#6c0000" visible="false"/>
        </children>
    </Pane>

    <ImageView fx:id="minimizeButton" fitHeight="24.0" fitWidth="24.0" layoutX="718.0" layoutY="16.0"
               styleClass="minimizeButton">
        <image>
            <Image url="@../../../../resources/icons/minimize_icon.png"/>
        </image>
    </ImageView>
    <ListView fx:id="usersListView" layoutX="45.0" layoutY="100.0" prefHeight="455.0" prefWidth="160.0"
              styleClass="connectedUsersListView"/>
    <ImageView fx:id="closeButton" fitHeight="24.0" fitWidth="24.0" layoutX="751.0" layoutY="16.0"
               styleClass="closeButton">
        <image>
            <Image url="@../../../../resources/icons/close_icon.png"/>
        </image>
    </ImageView>

    <Button fx:id="hamburgerButton" layoutX="14.0" layoutY="16.0" mnemonicParsing="false" prefHeight="32.0"
            prefWidth="32.0" styleClass="hamburgerButton"/>
    <AnchorPane fx:id="leftPane" prefWidth="160.0" styleClass="leftPane" translateX="-160"
                AnchorPane.bottomAnchor="56.0" AnchorPane.topAnchor="56.0">
        <VBox alignment="CENTER">
            <Button fx:id="backButton" layoutX="444.0" layoutY="28.0" onAction="#handleBackButton" prefHeight="39.0"
                    prefWidth="116.0" styleClass="goBackButton" text="    Go back" GridPane.columnIndex="0"
                    GridPane.rowIndex="0">
                <font>
                    <Font size="14.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="10" left="10" right="10" top="10"/>
                </VBox.margin>
            </Button>
            <Button fx:id="logoutButton" layoutX="573.0" layoutY="28.0" mnemonicParsing="false"
                    onAction="#handleLogoutButton" prefHeight="39.0" prefWidth="116.0" styleClass="logoutButton"
                    text="  Logout" GridPane.columnIndex="1">
                <font>
                    <Font size="14.0"/>
                </font>
                <VBox.margin>
                    <Insets bottom="10" left="10" right="10" top="10"/>
                </VBox.margin>
            </Button>
        </VBox>
    </AnchorPane>

    <stylesheets>
        <URL value="@../../../../resources/css/app-style.css"/>
        <URL value="@../../../../resources/css/room-style.css"/>
    </stylesheets>

</AnchorPane>
