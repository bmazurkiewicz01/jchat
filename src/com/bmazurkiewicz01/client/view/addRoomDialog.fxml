<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="350.0"
            styleClass="root" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bmazurkiewicz01.client.controller.AddRoomDialogController">
    <children>
        <Button fx:id="addRoomButton" defaultButton="true" layoutX="39.0" layoutY="165.0" mnemonicParsing="false"
                onAction="#handleAddRoomButton" prefWidth="125.0" styleClass="addRoomButton" text="Add room">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <TextField fx:id="nameField" alignment="CENTER" focusTraversable="false" layoutX="63.0" layoutY="95.0"
                   promptText="Room name" styleClass="nameField">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <Button fx:id="cancelButton" layoutX="199.0" layoutY="165.0" mnemonicParsing="false"
                onAction="#handleCancelButton" prefWidth="125.0" styleClass="cancelButton" text="Cancel">
            <font>
                <Font size="18.0"/>
            </font>
        </Button>
        <Label fx:id="errorLabel" alignment="CENTER" layoutX="42.0" layoutY="142.0" minWidth="-Infinity"
               prefHeight="18.0" prefWidth="276.0" text="Label" textFill="RED" visible="false"/>
        <Label layoutX="88.0" layoutY="46.0" text="Add new room" textFill="#6c62ff">
            <font>
                <Font name="System Bold" size="25.0"/>
            </font>
        </Label>
        <ImageView fx:id="closeButton" fitHeight="24.0" fitWidth="24.0" layoutX="303.0" layoutY="16.0"
                   styleClass="closeButton">
            <image>
                <Image url="@../../../../resources/icons/close_icon.png"/>
            </image>
        </ImageView>
    </children>
    <stylesheets>
        <URL value="@../../../../resources/css/add-room-dialog-style.css"/>
        <URL value="@../../../../resources/css/app-style.css"/>
    </stylesheets>
</AnchorPane>
