<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import java.net.*?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11"
      fx:controller="com.bmazurkiewicz01.client.controller.LoginController">
    <ImageView fitWidth="220" fitHeight="160">
        <image>
            <Image url="@icons/logo.png"/>
        </image>
    </ImageView>
    <TextField promptText="Name" focusTraversable="false" id="loginField" fx:id="loginField" alignment="CENTER" maxWidth="200">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </TextField>
    <PasswordField promptText="Password" focusTraversable="false" id="passwordField" fx:id="passwordField" alignment="CENTER" maxWidth="200">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </PasswordField>
    <Label fx:id="errorLabel" text="Label" visible="false" textFill="red"/>
    <Button id="loginButton" defaultButton="true" fx:id="loginButton" alignment="CENTER" onAction="#handleLoginButton" prefWidth="75.0" text="Login">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </Button>
    <Button id="registerButton" fx:id="registerButton" alignment="CENTER" onAction="#handleRegisterButton" prefWidth="75.0" text="Register">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </Button>

    <stylesheets>
        <URL value="@css/loginStyle.css"/>
    </stylesheets>
</VBox>

